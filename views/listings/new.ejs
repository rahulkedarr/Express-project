<% layout('/layouts/boilerplate') -%>
<body>
    <h3 class="text-center m-3">Create a New Listing</h3>
    <div class="row">
      <div class="col-8 m-auto">
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Title:</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Description:</label>
        <textarea name="listing[description]" class="form-control" placeholder="enter desciption" required></textarea>
        <div  class="invalid-feedback">
          Please enter short description.
        </div>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Image:</label>
        <input name="listing[image]" placeholder="enter image url" type="text"  class="form-control" />
      </div>
      <div class="row">
      <div class="mb-3 col-md-5">
        <label for="title" class="form-label mb-0">Price:</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
        <div  class="invalid-feedback">
          Please provide a valid price.
        </div>
      </div>
      <div class="mb-3 col-md-7">
        <label for="title" class="form-label mb-0">Country:</label>
        <input name="listing[country]" placeholder="enter country" type="text"  class="form-control" required/>
        <div  class="invalid-feedback">
          Please provide a valid country.
        </div>
      </div>
    </div> 
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Location:</label>
        <input name="listing[location]" placeholder="enter loaction" type="text"  class="form-control mb-4"/>
        <div  class="invalid-feedback">
          Please provide a valid location.
        </div>
      </div>
      <div class="text-center">
        <button class="btn btn-primary mb-5">Add New</button>
      </div>
    </form>
  </div>
</div>
  </body>