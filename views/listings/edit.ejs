<% layout('/layouts/boilerplate') -%>
  <body>
    <h3 class="text-center m-3">Edit your Listing</h3>
    <div class="row">
      <div class="col-8 m-auto">
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Title:</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
        <div  class="invalid-feedback">
          Please enter valid title.
        </div>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Description:</label>
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        <div  class="invalid-feedback">
          Please enter short description.
        </div>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Image:</label>
        <input name="listing[image]" value="<%= listing.image %>" type="text"  class="form-control" required/>
        <div  class="invalid-feedback">
          Please provide a valid image.
        </div>
      </div>
      <div class="row">
      <div class="mb-3 col-md-5">
        <label for="title" class="form-label mb-0">Price:</label>
        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
        <div  class="invalid-feedback">
          Please provide a valid price.
        </div>
      </div>
      <div class="mb-3 col-md-7 ">
        <label for="title" class="form-label mb-0">Country:</label>
        <input name="listing[country]" value="<%= listing.country %>" type="text"  class="form-control" required/>
        <div  class="invalid-feedback">
          Please provide a valid country.
        </div>
      </div>
    </div>
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Location:</label>
        <input name="listing[location]" value="<%= listing.location %>"type="text"  class="form-control" required/>
        <div  class="invalid-feedback">
          Please provide a valid loaction.
        </div>
      </div>
      <div class="text-center">
        <button class="btn btn-primary mb-5">Edit</button>
      </div>
    </div>
  </div>
      
    </form>
  </body>